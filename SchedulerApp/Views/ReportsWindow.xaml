<Window x:Class="SchedulerApp.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulerApp.Views"
        mc:Ignorable="d"
        Title="Reports" Height="650" Width="900">
        <StackPanel Margin="10">
            <TextBlock FontSize="16">Appointment Types by Month</TextBlock>
            <ListBox x:Name="lbTypesByMonth" Height="150" />
            <TextBlock FontSize="16" Margin="0,8,0,0">Schedule Per User</TextBlock>
            <ListBox x:Name="lbSchedulePerUser" Height="200" />
            <TextBlock FontSize="16" Margin="0,8,0,0">Appointments Per Customer</TextBlock>
            <ListBox x:Name="lbPerCustomer" Height="150" />
        </StackPanel>
    </Window>

