<Window x:Class="SchedulerApp.Views.CustomerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulerApp.Views"
        mc:Ignorable="d"
        Title="Customer Editor" Height="275" Width="500">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,6">
                <Label Width="120">Name:</Label>
                <TextBox x:Name="txtName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Height="25" Margin="0,0,0,6">
                <Label Width="120">Address:</Label>
                <TextBox x:Name="txtAddress" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Height="25" VerticalAlignment="Top" Margin="0,0,0,6">
                <Label Width="120">Phone:</Label>
                <TextBox x:Name="txtPhone" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="3" Height="35" HorizontalAlignment="Right" Margin="0,0,55,0">
                <Button x:Name="btnSave" Content="Save" Width="60" Click="btnSave_Click" Margin="4"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="60" Click="btnCancel_Click" Margin="4"/>
            </StackPanel>
        </Grid>
    </Window>
