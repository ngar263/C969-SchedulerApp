<Window x:Class="SchedulerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheduler App" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="Customers" Header="Customers" Click="Customers_Click" />
            <MenuItem x:Name="Appointments" Header="Appointments" Click="Appointments_Click" />
            <MenuItem x:Name="Calendar" Header="Calendar" Click="Calendar_Click" />
            <MenuItem x:Name="Reports" Header="Reports" Click="Reports_Click" />
            <MenuItem x:Name="Lgoout" Header="Logout" Click="Lgoout_Click" HorizontalAlignment="Right"/>
        </Menu>

        <Grid x:Name="ContentArea">
            <TextBlock Text="Welcome to Scheduler" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Grid>
    </DockPanel>
</Window>
