<!-- Views/CustomersWindow.xaml -->
<Window x:Class="SchedulerApp.Views.CustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customers" Height="500" Width="600">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="btnAdd" Width="50" Content="Add" Click="btnAdd_Click" Margin="2"/>
            <Button x:Name="btnEdit" Width="50" Content="Edit" Click="btnEdit_Click" Margin="2"/>
            <Button x:Name="btnDelete" Width="50" Content="Delete" Click="btnDelete_Click" Margin="2"/>
        </StackPanel>
        <DataGrid x:Name="dgCustomers" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding CustomerId}" Header="ID" Width="auto"/>
                <DataGridTextColumn Binding="{Binding CustomerName}" Header="Name" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Address}" Header="Address" Width="auto"/>
                <DataGridTextColumn Binding="{Binding PostalCode}" Header="Postal Code" Width="auto"/>
                <DataGridTextColumn Binding="{Binding City}" Header="City" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Country}" Header="Country" Width="auto"/>
                <DataGridTextColumn Binding="{Binding PhoneNumber}" Header="Phone Number" Width="auto"/>
                <DataGridCheckBoxColumn Binding="{Binding Active}" Header="Active" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
