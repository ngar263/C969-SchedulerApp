<Window x:Class="SchedulerApp.Views.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulerApp.Views"
        mc:Ignorable="d"
        Title="Calendar" Height="500" Width="700">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Calendar x:Name="calendar" SelectedDatesChanged="calendar_SelectedDatesChanged" Grid.Column="0"/>
            <ListBox x:Name="lbAppointments" Grid.Column="1" Margin="10"/>
        </Grid>
    </Window>

