<Window x:Class="SchedulerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheduler App" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Customers" Grid.Row="0" Grid.Column="0" FontSize="24" Margin="60" Click="Customers_Click"/>
        <Button Content="Appointments" Grid.Row="0" Grid.Column="1" FontSize="24" Margin="60" Click="Appointments_Click"/>
        <Button Content="Calendar" Grid.Row="1" Grid.Column="0" FontSize="24" Margin="60" Click="Calendar_Click"/>
        <Button Content="Reports" Grid.Row="1" Grid.Column="1" FontSize="24" Margin="60" Click="Reports_Click"/>
        <Button Content="Logout" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="35" Click="Lgoout_Click"/>
    </Grid>
</Window>
